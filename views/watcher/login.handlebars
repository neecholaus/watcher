<div class="container" id="watcher-login">
    <div class="row">
        <div class="col-md-10 col-lg-8 col-xl-5 mx-auto mt-5">
            <h4 class="mb-5">Login</h4>
            <label>Username</label>
            <input type="text" class="form-control mb-3" v-model="username" />
            <label>Password</label>
            <input type="password" class="form-control mb-3" v-model="password" />
            
            <button type="button" class="btn btn-primary float-right w-100" @click="submit">
                <i class="far fa-eye"></i> 
                Login
            </button>
        </div>
    </div>
</div>
