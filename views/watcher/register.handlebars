<div class="container-fluid" style="background: url('/public/images/watcher-login.jpg');background-size: cover;background-position: center;background-repeat: no-repeat;">
    <div class="row">
        <div class="col-md-6 col-lg-8"></div>
        <div class="col-md-6 col-lg-4 mx-auto p-4 text-white" style="min-height:calc(100vh - 56px);background:rgba(0,0,0,0.5);">
            {{#if errors}}
                {{#each errors}}
                    <div class="alert bg-danger text-white rounded-0">
                        <i class="fa fa-exclamation-triangle mr-2"></i> {{this}}
                    </div>
                {{/each}}
            {{/if}}

            <h3 class="mt-2 mb-4 font heebo">Register</h3>
            <form action="/watcher/register" method="POST">
                <input type="hidden" name="token" value="{{ token }}" />

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text dark"><i class="fa fa-id-card"></i></span>
                    </div>
                    <input type="text" placeholder="Name" class="form-control dark transparent" name="name" autocomplete="off" required />
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text dark"><i class="fa fa-envelope"></i></span>
                    </div>
                    <input type="text" placeholder="Email" class="form-control dark transparent" name="email" autocomplete="off" required />
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text dark"><i class="fa fa-lock"></i></span>
                    </div>
                    <input type="password" placeholder="Password" class="form-control dark transparent" name="password" required />
                </div>

                <button type="submit" class="btn btn-outline-light rounded-0 w-100">Register</button>
            </form>
            <p class="mt-5" style="font-size: 13px">Created by Nick Neuman.</p>
        </div>
    </div>
</div>