{{#if user.admin }}
    <div class="p-2 bg-white" style="border-bottom: solid 1px #e3e3e3;">
        <a href="/watcher/generate-invite">
            <button type="button" class="btn btn-success btn-sm rounded-0"><i class="fa fa-envelope mr-2"></i> Send Invite</button>
        </a>
        <a href="/watcher/upload-image">
            <button type="button" class="btn btn-info btn-sm rounded-0"><i class="fa fa-upload mr-2"></i> Upload Image</button>
        </a>
    </div>
{{/if}}

<div class="container-fluid p-0">
    <div class="row bg-light p-2 m-0">
        <div class="col-md-6">
            <div>
                <h4 class="d-inline-block mb-0">Dashboard</h4>
                {{#if user.admin }}
                    <span style="vertical-align: top" class="badge badge-warning">Admin</span>
                {{/if}}
            </div>
        </div>
        <div class="col-md-6">
            <p class="d-none d-md-block text-right mb-0 font bold"><i class="fa fa-circle text-success"></i> {{ user.name }}</p>
            <p class="d-block d-md-none mb-0 font bold"><i class="fa fa-circle text-success"></i> {{ user.name }}</p>
        </div>
    </div>
    <div class="container">
        <capture-canvas class="mt-3"></capture-canvas>
    </div>
</div>