<div class="container pt-4">
    <h4>Dashboard</h4>
    {{#if user.admin }}
        <div class="p-2 bg-white rounded">
            <a href="/watcher/generate-invite">
                <button type="button" class="btn btn-success"><i class="fa fa-envelope mr-2"></i> Send Invite</button>
            </a>
        </div>
    {{/if}}

    <p class="mt-3"><i class="fa fa-circle text-success"></i> Logged in as {{ user.name }}.</p>

    {{#if user.admin }}
        <p class="mt-3"><i class="fa fa-circle text-warning"></i> You are an admin.</p>
    {{/if}}
</div>