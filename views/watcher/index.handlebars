{{#if user.admin }}
    <div class="p-2 bg-white" style="border-bottom: solid 1px #e3e3e3;">
        <a href="/watcher/generate-invite">
            <button type="button" class="btn btn-success rounded-0"><i class="fa fa-envelope mr-2"></i> Send Invite</button>
        </a>
        <a href="/watcher/upload-image">
            <button type="button" class="btn btn-info rounded-0"><i class="fa fa-upload mr-2"></i> Upload Image</button>
        </a>
    </div>
{{/if}}

<div class="container pt-4">
    <h4>Dashboard</h4>

    <p class="mt-3"><i class="fa fa-circle text-success"></i> Logged in as {{ user.name }}.</p>

    {{#if user.admin }}
        <p class="mt-3"><i class="fa fa-circle text-warning"></i> You are an admin.</p>
    {{/if}}
</div>